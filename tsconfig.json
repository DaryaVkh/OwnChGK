{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build/app"
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "node_modules",
    "frontend"
  ],
  "include": [
    "app"
  ]
}
